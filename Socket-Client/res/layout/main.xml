<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
       android:background="#F2F5A9"
    android:id="@+id/gralayout">
           
    <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Socket - Cliente"
    android:gravity="center"
    android:textSize="18pt"
    android:textColor="#000000"

    />
    
        
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#CEF6F5"
    android:id="@+id/iplayout"
    >
    
 		 <TextView
  			android:id="@+id/txtip"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="IP:"
  			android:textColor="#000000"
  			android:textSize="15pt"
  			
  		/>
  		
  		<EditText
  			android:id="@+id/ipinput"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  		/>
  		
   </LinearLayout>
  
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#CEF6F5"
    android:id="@+id/portlayout"
   >
    
  		<TextView
  			android:id="@+id/txtport"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="Puerto:"
  			android:textColor="#000000"
  			android:textSize="15pt"
  		/>
  		
  		<EditText
  			android:id="@+id/portinput"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  		/>
  		
   </LinearLayout>   
   
 
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
       android:background="#F2F5A9"
    android:id="@+id/conneytlay" >
      
 		<Button android:id="@+id/btcnt" 
 			android:text=" Conectar"
 			android:layout_width="wrap_content"
 			android:layout_height="fill_parent" 
 			android:gravity="center_vertical" 
 			android:onClick="Conectando" 		
 		/> 
 		
        <TextView
  			android:id="@+id/txtstatus"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text=".. En espera .."
  			android:textColor="#000000"
  			android:textSize="14pt"
  			android:gravity="center" 		
  			
  		/>
           
    	
</LinearLayout>   	

 <LinearLayout 
    android:id="@+id/layout_txt"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#CEF6F5"    
>  
		<TextView
  			android:id="@+id/txtlbl"
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:text="Enviar texto:"
  			android:textColor="#000000"  			
  			android:textSize="14pt"
  			
		 />

 <LinearLayout 
    android:id="@+id/txtbox"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
      android:background="#CEF6F5"     
>  
		<EditText
  			android:id="@+id/input_txt"
  			android:layout_width="0dp"
  			android:layout_height="fill_parent"
  			android:text="Hola"
  			android:layout_weight="3"
  			
		/>
			<Button android:id="@+id/sndtxt" 
 			android:text="Enviar texto"
 			android:layout_width="0dp"
  			android:layout_height="wrap_content"
  			android:layout_weight="1"
  			android:layout_marginBottom="8dp"
  			android:onClick="Send_texto"
  			
  			
	/>    
  		
</LinearLayout>
		

</LinearLayout>    
	
     
</LinearLayout>



